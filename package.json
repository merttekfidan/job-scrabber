{
    "name": "job-tracker-monorepo",
    "version": "1.0.0",
    "private": true,
    "description": "Job Application Tracker - Chrome Extension + Node.js API + Dashboard",
    "scripts": {
        "build": "cd server && npm install",
        "start": "node server/index.js",
        "migrate": "node server/migrate.js",
        "dev:server": "cd server && npm run dev",
        "dev:dashboard": "cd dashboard && python3 -m http.server 8080"
    },
    "workspaces": [
        "server"
    ],
    "dependencies": {
        "express": "^4.18.2",
        "pg": "^8.11.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}